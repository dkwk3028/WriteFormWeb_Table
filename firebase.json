{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": {
        "public": "public",
        "headers": [
            { "source": "/js/*.js", "headers": [{ "key": "Cache-Control", "value": "no-cache" }] },
            { "source": "/css/*.css", "headers": [{ "key": "Cache-Control", "value": "no-cache" }] },
            { "source": "index.html", "headers": [{ "key": "Cache-Control", "value": "no-cache" }] }
        ],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    }
}